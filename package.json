{
    "name": "scalr",
    "displayName": "Scalr",
    "description": "The Scalr VSCode Extension is a tool designed to streamline your Opentofu/Terraform workflows by integrating Scalr directly into your Visual Studio Code environment.",
    "version": "0.0.3",
    "icon": "assets/scalr_full_colour.png",
    "license": "MPL-2.0",
    "publisher": "Scalr",
    "engines": {
        "vscode": "^1.91.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "devops",
        "terraform",
        "hcl",
        "scalr",
        "opentofu"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "scalr",
                    "title": "Scalr",
                    "icon": "assets/Scalr Monochrome Icon Light@2x.png"
                }
            ]
        },
        "views": {
            "scalr": [
                {
                    "id": "workspaces",
                    "name": "Workspaces",
                    "contextualTitle": "Scalr workspaces"
                },
                {
                    "id": "runs",
                    "name": "Runs",
                    "contextualTitle": "Scalr runs"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "workspaces",
                "contents": "[Login to Scalr](command:scalr.login)",
                "when": "scalr.signed-in === false"
            },
            {
                "view": "runs",
                "contents": "Select a Workspace to view a list of runs"
            }
        ],
        "commands": [
            {
                "command": "scalr.login",
                "title": "Scalr: Login",
                "enablement": "scalr.signed-in === false"
            },
            {
                "command": "workspace.open",
                "title": "View workspace",
                "icon": "$(globe)"
            },
            {
                "command": "run.open",
                "title": "View runs",
                "icon": "$(globe)"
            },
            {
                "command": "apply.open",
                "title": "Show apply output",
                "icon": "$(output)"
            },
            {
                "command": "plan.open",
                "title": "Show plan output",
                "icon": "$(output)"
            },
            {
                "command": "workspace.refresh",
                "title": "Refresh",
                "icon": "$(refresh)",
                "enablement": "scalr.signed-in"
            },
            {
                "command": "run.refresh",
                "title": "Refresh",
                "icon": "$(refresh)",
                "enablement": "scalr.signed-in"
            },
            {
                "command": "workspace.filter",
                "title": "Filter",
                "icon": "$(filter)",
                "enablement": "scalr.signed-in"
            },
            {
                "command": "workspace.clearFilters",
                "title": "Clear filters",
                "icon": "$(clear-all)",
                "enablement": "scalr.signed-in"
            },
            {
                "command": "run.create",
                "title": "Trigger Run",
                "icon": "$(play)",
                "enablement": "scalr.signed-in"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "workspace.filter",
                    "group": "navigation",
                    "when": "view == workspaces"
                },
                {
                    "command": "workspace.refresh",
                    "group": "navigation",
                    "when": "view == workspaces"
                },
                {
                    "command": "run.refresh",
                    "group": "navigation",
                    "when": "view == runs"
                }
            ],
            "view/item/context": [
                {
                    "command": "workspace.open",
                    "group": "inline",
                    "when": "view == workspaces && viewItem =~ /workspaceItem/"
                },
                {
                    "command": "run.open",
                    "group": "inline",
                    "when": "view == runs && viewItem =~ /runItem/"
                },
                {
                    "command": "apply.open",
                    "group": "inline",
                    "when": "view == runs && viewItem =~ /applyItem/"
                },
                {
                    "command": "plan.open",
                    "group": "inline",
                    "when": "view == runs && viewItem =~ /planItem/"
                },
                {
                    "command": "run.create",
                    "group": "inline",
                    "when": "view == workspaces && viewItem =~ /workspaceItem/"
                },
                {
                    "command": "workspace.clearFilters",
                    "group": "inline",
                    "when": "view == workspaces && viewItem =~ /workspaceFilterInfo/"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "build": "webpack --config webpack.prod.js",
        "watch": "webpack --watch --config webpack.dev.js",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint 'src/**/*.ts' --fix",
        "test": "vscode-test",
        "openapi-ts": "openapi-ts",
        "format": "prettier --write .",
        "prepare": "husky"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.10.0",
        "@hey-api/openapi-ts": "^0.53.0",
        "@types/mocha": "^10.0.7",
        "@types/node": "^22.5.4",
        "@types/vscode": "^1.91.0",
        "@typescript-eslint/eslint-plugin": "^8.5.0",
        "@typescript-eslint/parser": "^8.5.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.0",
        "clean-webpack-plugin": "^4.0.0",
        "eslint": "^9.10.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^8.0.0",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "ts-loader": "^9.5.1",
        "typescript": "^5.5.4",
        "webpack": "^5.92.1",
        "webpack-cli": "^5.1.4",
        "webpack-merge": "^6.0.1"
    },
    "dependencies": {
        "@hey-api/client-fetch": "^0.2.4",
        "date-fns": "^3.6.0"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Scalr/scalr-vscode.git"
    }
}
